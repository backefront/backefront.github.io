<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <%- partial('google-analytics') %>
  <%- partial('google-adsense') %>
  <%
  var title = page.title;

  if (is_archive()){
    title = __('archive_a');

    if (is_month()){
      title += ': ' + page.year + '/' + page.month;
    } else if (is_year()){
      title += ': ' + page.year;
    }
  } else if (is_category()){
    title = __('category') + ': ' + page.category;
  } else if (is_tag()){
    title = __('tag') + ': ' + page.tag;
  }
  %>
  <title><% if (title){ %><%= title %> | <% } %><%= config.title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <meta property="og:type" content="website">
  <meta property="og:locale" content="pt">

  <% if (!is_home() && page.postKeywords){ %>
    <meta name="keywords" content='<%= page.postKeywords %>'>
  <% } else {%>
    <meta name="keywords" content="back-end, front-end, dicas programação, desenvolvimento de sistemas, algoritmos, usabilidade, UX, websemântico">
  <% } %>
  
  <% if (!is_home() && page.postDescription){ %>
    <meta name="description" content='<%= page.postDescription %>'>
    <meta property="og:description" content='<%= page.postDescription %>'>
    <meta name="twitter:description" content='<%= page.postDescription %>'>
  <% } else {%>
    <meta name="description" content="Dicas, melhores práticas e novidades de desenvolvimento web!">
    <meta property="og:description" content="Dicas, melhores práticas e novidades de desenvolvimento web!">
    <meta name="twitter:description" content="Dicas, melhores práticas e novidades de desenvolvimento web!">
  <% } %>
  
  <% if (theme.favicon){ %>
    <link rel="icon" href="<%- theme.favicon %>">
  <% } %>

  <% if (config.highlight.enable){ %>
    <link href="//fonts.googleapis.com/css?family=Source+Code+Pro" rel="stylesheet" type="text/css">
  <% } %>

  <link rel="alternate" href="/atom.xml" title="Dicas de desenvolvimento e programação" type="application/atom+xml">
  <%- css('css/style') %>
</head>
